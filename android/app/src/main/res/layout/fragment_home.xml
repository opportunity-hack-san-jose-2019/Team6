<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorWhite"
    android:weightSum="10"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.33"
        android:gravity="center"
        android:background="@color/square1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am looking for help"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.33"
        android:gravity="center"
        android:id="@+id/layout2"
        android:background="@color/square2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am volunteer"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.33"
        android:gravity="center"
        android:id="@+id/layout3"
        android:background="@color/square3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am admin"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>


    </RelativeLayout>








</LinearLayout>